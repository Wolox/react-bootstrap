import { render } from '@testing-library/react';

import {{name}} from './index';

// You can test simple components with snapshots but if
// your component has interactions add tests for them!
test('renders correctly without the optionalProp', () => {
  const { container } = render(<{{name}} someProp={1} />);
  expect(container.firstChild).toMatchSnapshot();
});

test('renders correctly with the optionalProp', () => {
  const { container } = render(<{{name}} someProp={1} someOptionalProp={2} />);
  expect(container.firstChild).toMatchSnapshot();
});

test('shows someProp', () => {
  const { getByText } = render(<{{name}} someProp={3} />);
  expect(getByText(/This is a test with 3/i)).toBeInTheDocument();
});

test('shows optionalProp when sent', () => {
  const { getByText } = render(<{{name}} someProp={3} someOptionalProp={4} />);
  expect(getByText(/and 4/i)).toBeInTheDocument();
});

